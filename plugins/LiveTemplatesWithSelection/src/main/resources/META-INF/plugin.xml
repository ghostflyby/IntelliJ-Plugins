<idea-plugin package="dev.ghostflyby.selectionlivetemplate">
    <id>dev.ghostflyby.selectionlivetemplate</id>
    <name>Live Templates with Selection</name>
    <vendor>ghostflyby</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <editorFactoryListener
                implementation="dev.ghostflyby.selectionlivetemplate.SelectionTemplatesEditorFactoryListener"/>
        <liveTemplateSubstitutor
                implementation="dev.ghostflyby.selectionlivetemplate.ExpandSelectionTemplateSubstitutor"/>
    </extensions>
</idea-plugin>
