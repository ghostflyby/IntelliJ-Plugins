<idea-plugin package="dev.ghostflyby.ideavim.toggleIME">
    <id>dev.ghostflyby.ideavim.toggleIME</id>
    <name>Vim Toggle IME</name>
    <vendor>ghostflyby</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>IdeaVIM</depends>

    <extensions defaultExtensionNs="IdeaVIM">
        <vimExtension name="autotoggleime" implementation="dev.ghostflyby.ideavim.toggleIME.DisableImeInNormal"/>
    </extensions>
</idea-plugin>
