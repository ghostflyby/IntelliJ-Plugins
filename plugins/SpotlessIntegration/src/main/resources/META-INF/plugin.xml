<idea-plugin>
    <id>dev.ghostflyby.spotless</id>
    <name>Spotless</name>
    <vendor>ghostflyby</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="gradle.xml">com.intellij.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--        <checkinHandlerFactory implementation="dev.ghostflyby.spotless.SpotlessCommitHandlerFactory"/>-->
        <formattingService implementation="dev.ghostflyby.spotless.SpotlessFormatingService"/>
        <!--        <fileEncodingProvider implementation="dev.ghostflyby.spotless.SpotlessFileEncodingProvider"/>-->
    </extensions>

    <extensionPoints>
        <extensionPoint name="spotlessDaemonProvider" interface="dev.ghostflyby.spotless.SpotlessDaemonProvider"
                        dynamic="true"/>
    </extensionPoints>
</idea-plugin>
